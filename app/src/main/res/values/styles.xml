<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Theme.MyFancyTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:homeAsUpIndicator">@drawable/ic_arrow_back</item>
    </style>

    <style parent="TextAppearance.Design.Counter" name="CounterText">

        <item name="android:textSize">16sp</item>

        <item name="android:textColor">@color/white</item>

    </style>

    -<style parent="TextAppearance.Design.Counter.Overflow" name="CounterOverFlow">

    <item name="android:textSize">16sp</item>

    <item name="android:textColor">@color/white</item>

</style>

</resources>
